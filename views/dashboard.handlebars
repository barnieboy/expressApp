<h1></h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
        </tr>

    </thead>


    <tbody>
        {{#if products}} {{#each products}}
        <tr>
            <td>{{id}} </td>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{category}}</td>
        </tr>
        {{/each}} {{else}}
        <tr>
            <td></td>
            <td style="text-align:right">No products available</td>
        </tr>
        {{/if}}
    </tbody>
</table>